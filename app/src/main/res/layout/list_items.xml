<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:contentPadding="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textqueid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textquetit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />


</LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
    android:layout_marginLeft="10dp"
    android:id="@+id/textop4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textqtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete question"
        android:id="@+id/delquestion"></Button>
</LinearLayout>
    </androidx.cardview.widget.CardView>
